---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <section
    class="margin-bottom-24px"
    style="min-height: 100vh; display: flex; align-items: center; justify-content: center;"
  >
    <div class="container">
      <div
        class="hero-split"
        style="text-align: center; max-width: 600px; margin: 0 auto;"
      >
        <h1 class="main-title margin-bottom-24px">MoreMonuments</h1>
        <div style="margin-top: 32px;">
          <a
            href="https://moremonuments.org/ecosystem"
            class="button-primary"
          >
            Monuments & Ecosystem
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  :root {
    --primary-blue: #1f3056;
    --secondary-blue: #263c59;
    --accent-gold: #c87c35;
    --white: #fefeff;
    --cream: #e4dfd5;
    --bright-gold: #e5c422;
  }

  body {
    background-color: var(--cream);
    color: var(--primary-blue);
  }

  .main-title {
    font-family: 'Lovelace', serif;
    font-size: 3.5rem;
    font-weight: 400;
    color: var(--primary-blue);
    letter-spacing: -0.02em;
    line-height: 1.1;
  }

  .button-primary {
    border-radius: 8px;
    background: var(--accent-gold);
    color: var(--white);
    padding: 16px 32px;
    font-size: 1.1rem;
    font-weight: 500;
    text-decoration: none;
    display: inline-block;
    transition: all 0.2s ease;
    box-shadow: 0px 2px 8px rgba(31, 48, 86, 0.15);
    border: none;
  }

  .button-primary:hover {
    background: var(--bright-gold);
    color: var(--primary-blue);
    transform: translateY(-1px);
    box-shadow: 0px 4px 12px rgba(31, 48, 86, 0.2);
  }

  section {
    background: linear-gradient(135deg, var(--cream) 0%, var(--white) 100%);
  }
</style>
